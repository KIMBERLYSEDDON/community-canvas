<container class="columns">
  <section class="column">
    <form class="login-form">
      <div class="field">
        <p class="control has-icons-left has-icons-right">
          <input class="input" type="text" id="username-login" placeholder="Username">
          <span class="icon is-small is-left">
            <i class="far fa-user"></i>
          </span>
        </p>
      </div>
      <div class="field">
        <p class="control has-icons-left">
          <input class="input" type="password" id="password-login" placeholder="Password">
          <span class="icon is-small is-left">
            <i class="fas fa-lock"></i>
          </span>
        </p>
      </div>
      <div class="field">
        <p class="control">
          <button class="button is-primary" type="submit">
            Login
          </button>
        </p>
      </div>
    </form>
  </section>
  <section class="column">
    <form class="signup-form">
      <div class="field">
        <p class="control has-icons-left has-icons-right">
          <input class="input" type="text" id="username-signup" placeholder="Username">
          <span class="icon is-small is-left">
            <i class="far fa-user"></i>
          </span>
        </p>
      </div>
      <div class="field">
        <p class="control has-icons-left has-icons-right">
          <input class="input" type="email" id="email-signup" placeholder="Email">
          <span class="icon is-small is-left">
            <i class="fas fa-envelope"></i>
          </span>
        </p>
      </div>
      <div class="field">
        <p class="control has-icons-left">
          <input class="input" type="password" id="password-signup" placeholder="Password">
          <span class="icon is-small is-left">
            <i class="fas fa-lock"></i>
          </span>
        </p>
      </div>
      <div class="field">
        <p class="control">
          <button class="button is-primary" type="submit">
            Create Account
          </button>
        </p>
      </div>
    </form>
  </section>
</container>

<script src="../dist/login.js"></script>
